{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "data": [
    {
      "name": "source_0",
      "url": "https://sanddance.js.org/sample-data/titanicmaster.tsv",
      "format": {
        "type": "tsv"
      }
    },
    {
      "name": "facet_domain",
      "source": "source_0",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "Gender"
          ]
        }
      ]
    },
    {
      "name": "facet_domain_row",
      "transform": [
        {
          "type": "sequence",
          "start": 0,
          "stop": 1
        }
      ]
    },
    {
      "name": "facet_domain_column",
      "transform": [
        {
          "type": "sequence",
          "start": 0,
          "stop": {
            "signal": "length(data(\"facet_domain\"))"
          }
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "child_width",
      "value": 300
    },
    {
      "name": "child_height",
      "value": 300
    }
  ],
  "layout": {
    "padding": 20,
    "bounds": "full",
    "align": "all"
  },
  "marks": [
    {
      "name": "facet-title",
      "type": "group",
      "role": "column-title",
      "title": {
        "text": "Gender",
        "style": "guide-title",
        "offset": 10
      }
    },
    {
      "name": "row_header",
      "type": "group",
      "role": "row-header",
      "from": {
        "data": "facet_domain_row"
      },
      "encode": {
        "update": {
          "height": {
            "signal": "child_height"
          }
        }
      },
      "axes": [
        {
          "scale": "y",
          "orient": "left",
          "grid": false,
          "title": "Class",
          "zindex": 0
        }
      ]
    },
    {
      "name": "column_footer",
      "type": "group",
      "role": "column-footer",
      "from": {
        "data": "facet_domain_column"
      },
      "encode": {
        "update": {
          "width": {
            "signal": "child_width"
          }
        }
      },
      "axes": [
        {
          "scale": "x",
          "orient": "bottom",
          "grid": false,
          "title": "Joined",
          "labelAlign": "right",
          "labelAngle": 270,
          "labelBaseline": "middle",
          "zindex": 0
        }
      ]
    },
    {
      "name": "cell",
      "type": "group",
      "title": {
        "text": {
          "signal": "''+parent[\"Gender\"]"
        },
        "style": "guide-label",
        "frame": "group",
        "offset": 10
      },
      "style": "cell",
      "from": {
        "facet": {
          "name": "facet",
          "data": "source_0",
          "groupby": [
            "Gender"
          ]
        }
      },
      "sort": {
        "field": [
          "datum[\"Gender\"]"
        ],
        "order": [
          "ascending"
        ]
      },
      "encode": {
        "update": {
          "width": {
            "signal": "child_width"
          },
          "height": {
            "signal": "child_height"
          }
        }
      },
      "marks": [
        {
          "name": "child_marks",
          "type": "symbol",
          "style": [
            "square"
          ],
          "from": {
            "data": "facet"
          },
          "encode": {
            "update": {
              "opacity": {
                "value": 0.7
              },
              "tooltip": {
                "signal": "datum"
              },
              "fill": {
                "value": "#4c78a8"
              },
              "x": {
                "scale": "x",
                "field": "Joined",
                "offset": 3
              },
              "y": {
                "scale": "y",
                "field": "Class",
                "offset": -3
              },
              "shape": {
                "value": "square"
              }
            }
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "point",
      "domain": {
        "data": "source_0",
        "field": "Joined",
        "sort": true
      },
      "range": [
        0,
        {
          "signal": "child_width"
        }
      ],
      "padding": 0.5
    },
    {
      "name": "y",
      "type": "point",
      "domain": {
        "data": "source_0",
        "field": "Class",
        "sort": true
      },
      "range": [
        0,
        {
          "signal": "child_height"
        }
      ],
      "padding": 0.5
    }
  ]
}